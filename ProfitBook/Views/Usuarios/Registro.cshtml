@model RegistroViewModel

@{
    ViewData["Title"] = "Registro";
}

<div class="d-flex justify-content-center align-items-center">
    <div class="card shadow-lg p-4" style="max-width: 400px; width: 100%;">
        <div class="card-body">
            <h1 class="text-center mb-4 text-primary">
                <i class="bi bi-person-plus-fill"></i> Regístrate
            </h1>
            <form asp-action="Registro">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="mb-3">
                    <label asp-for="Email" class="form-label fw-bold"><i class="bi bi-envelope-fill"></i> Correo electrónico</label>
                    <input asp-for="Email" class="form-control" placeholder="Ingresa tu correo" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Password" class="form-label fw-bold"><i class="bi bi-lock-fill"></i> Contraseña</label>
                    <input asp-for="Password" class="form-control" placeholder="Crea una contraseña" type="password" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <div class="d-grid">
                    <button class="btn btn-primary btn-lg mb-2">Regístrate</button>
                </div>
                <div class="text-center">
                    <a class="btn btn-link text-success" asp-action="login"><i class="bi bi-box-arrow-in-right"></i> Ya tengo una cuenta</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
