@model LoginViewModel

@{
    ViewData["Title"] = "Login";
}

<div class="d-flex justify-content-center align-items-center">
    <div class="card shadow-lg p-4" style="max-width: 400px; width: 100%;">
        <div class="card-body">
            <h1 class="text-center text-primary mb-4">
                <i class="bi bi-box-arrow-in-right"></i> Iniciar Sesión
            </h1>
            <form asp-action="Login">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="mb-3">
                    <label asp-for="Email" class="form-label fw-bold"><i class="bi bi-envelope-fill"></i> Correo electrónico</label>
                    <input asp-for="Email" class="form-control" placeholder="Ingresa tu correo" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Password" class="form-label fw-bold"><i class="bi bi-lock-fill"></i> Contraseña</label>
                    <input asp-for="Password" class="form-control" placeholder="Ingresa tu contraseña" type="password" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <div class="form-check mb-3">
                    <input class="form-check-input" type="checkbox" asp-for="Recuerdame" />
                    <label class="form-check-label" asp-for="Recuerdame">Recordarme</label>
                </div>

                <div class="d-grid">
                    <button class="btn btn-primary btn-lg mb-3">Iniciar Sesión</button>
                </div>

                <div class="text-center">
                    <a class="btn btn-link text-success" asp-action="registro">
                        <i class="bi bi-person-plus-fill"></i> Crear una nueva cuenta
                    </a>
                </div>
                <div class="mt-3 text-center">
                    <a class="btn btn-link text-danger" asp-action="OlvideMiPassword"><i class="bi bi-exclamation-circle-fill"></i> ¿Olvidaste tu contraseña?</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
