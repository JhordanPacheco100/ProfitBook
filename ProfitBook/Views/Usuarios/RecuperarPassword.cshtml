@model RecuperarPasswordViewModel

@{
    ViewData["Title"] = "Resetea tu password";
}

<h1 class="text-center text-primary mb-4">Restablecer contraseña</h1>

<div class="d-flex justify-content-center align-items-center">
    <div class="card shadow-lg p-4" style="max-width: 400px; width: 100%;">
        <div class="card-body">
            <form asp-action="RecuperarPassword">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <input type="hidden" asp-for="CodigoReseteo" />

                <!-- Campo de Email -->
                <div class="mb-3">
                    <label asp-for="Email" class="form-label fw-bold">
                        <i class="bi bi-envelope-fill"></i> Correo electrónico
                    </label>
                    <div class="input-group">
                        <span class="input-group-text">
                            <i class="bi bi-envelope"></i>
                        </span>
                        <input asp-for="Email" class="form-control" placeholder="example@example.com" type="email" />
                    </div>
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <!-- Campo de Password -->
                <div class="mb-3">
                    <label asp-for="Password" class="form-label fw-bold">
                        <i class="bi bi-lock-fill"></i> Nueva contraseña
                    </label>
                    <div class="input-group">
                        <span class="input-group-text">
                            <i class="bi bi-lock"></i>
                        </span>
                        <input asp-for="Password" class="form-control" placeholder="Ingresa tu nueva contraseña" type="password" />
                    </div>
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <!-- Botón de Resetear -->
                <div class="d-grid">
                    <button class="btn btn-primary btn-lg">
                        <i class="bi bi-check-circle"></i> Resetear contraseña
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
