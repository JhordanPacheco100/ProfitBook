@model VentasIndexViewModel

@{
    ViewData["Title"] = "Ventas Semanales";
}

<h2>Detalles de Ventas Semanales</h2>

<partial name="_Submenu" model="SubMenuTransacciones.Semanal" />

<div class="d-flex justify-content-between align-items-center mb-3">

    <partial name="_DateNavigation" model="Model.DateNavigation" />

    <a asp-action="ExportarExcel"
       asp-route-mes="@Model.DateNavigation.FechaActual.Month"
       asp-route-año="@Model.DateNavigation.FechaActual.Year"
       class="btn btn-success">
        <i class="bi-file-earmark-excel-fill"></i> Exportar
    </a>
</div>

<div class="table-responsive">
    <table class="table table-hover">
        <thead class="thead-light">
            <tr>
                <th scope="col">Semana</th>
                <th scope="col">Ventas</th>
                <th scope="col">Inversión</th>
                <th scope="col">Ganancia</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var resumen in Model.ResumenVentasSemanal)
            {
                <tr>
                    <td>@resumen.FechaInicioSemana.ToString("yyyy-MM-dd") - @resumen.FechaFinSemana.ToString("yyyy-MM-dd")</td>
                    <td>@resumen.Ventas.ToString("C")</td>
                    <td>@resumen.Inversion.ToString("C")</td>
                    <td>@resumen.Ganancia.ToString("C")</td>
                </tr>
            }
        </tbody>
    </table>
</div>
