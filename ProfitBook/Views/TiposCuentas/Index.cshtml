@model IEnumerable<TipoCuenta>
@{
    ViewData["Title"] = "Tipos Cuentas";
}

<h1>Tipos de Cuentas</h1>
<p>
    Los tipos de cuentas permiten clasificar y organizar tus finanzas de manera eficiente.
    Utiliza esta sección para agrupar tus cuentas en categorías como préstamos, tarjetas de crédito, y otros.
</p>


<a asp-action="Crear" class="btn btn-success mb-3">
    <i class="bi bi-plus-lg"></i> Crear nuevo
</a>

<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>Acciones</th>
            <th>Nombre</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var tipoCuenta in Model)
        {
            <tr>
                <td>
                    <input type="hidden" value="@tipoCuenta.Id" class="ids" />
                    <a class="btn btn-primary me-1" asp-action="Editar" asp-route-id="@tipoCuenta.Id">
                        <i class="bi bi-pencil"></i> Editar
                    </a>
                    <a class="btn btn-danger" asp-action="Borrar" asp-route-id="@tipoCuenta.Id">
                        <i class="bi bi-trash"></i> Borrar
                    </a>
                </td>
                <td>
                    @tipoCuenta.Nombre
                </td>
            </tr>
        }
    </tbody>
</table>
